<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Reset Password</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 2rem;
      max-width: 400px;
    }
    input, button {
      padding: 0.5rem;
      width: 100%;
      margin-top: 0.5rem;
    }
    #message {
      margin-top: 1rem;
    }
  </style>
</head>
<body>
    <% if(invalid) { %>
        <p style="color: red;">Invalid reset url</p>
    <% } %>
        <%if (!invalid) { %>
        <h2>Reset Password</h2>
        <form id="reset-password-form">

            <label for="newPassword">New Password:</label>
            <input type="password" id="newPassword" name="newPassword" required />

            <label for="confirmPassword">Confirm New Password:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required />

            <button type="submit">Reset Password</button>
        </form>

        <div id="message"></div>
        
        <%}%>
  
        <%- include('partials/toaster') %>

        <script>
            const form = document.getElementById('reset-password-form');
            const messageDiv = document.getElementById('message');

            form.addEventListener('submit', async (e) => {
            e.preventDefault();

            console.log('Form submitted');
            
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (newPassword !== confirmPassword) {
                messageDiv.textContent = "New passwords do not match.";
                messageDiv.style.color = 'red';
                return;
            }

            const resetToken = '<%= token %>';
            if (!resetToken) {
                messageDiv.textContent = "Invalid reset url.";
                messageDiv.style.color = 'red';
                return;
            }

            try {
                const res = await fetch('reset-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ newPassword, confirmPassword, resetToken })
                });

                if (!res.ok) {
                const errorData = await res.json();
                throw new Error(errorData.message || 'Failed to reset password');
                }

                const data = await res.json();
                messageDiv.textContent = data.message || 'Password reset successful!';
                messageDiv.style.color = 'green';
                if(data.status != true) throw new Error(data.error);
                showSuccess(data.message || 'Password reset successfull');
                setTimeout(() => {
                    window.location.href = '/signin';
                })
            } catch (err) {
                messageDiv.textContent = err.message;
                messageDiv.style.color = 'red';
                showError(err.message || 'Failed to reset password');
            }
            });
        </script> 
  
</body>
</html>
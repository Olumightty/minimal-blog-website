<style>
    #toaster {
      position: fixed;
      bottom: 20px;
      right: 20px;
      max-width: 300px;
      z-index: 9999;
    }
    
    .toast-failed {
      background-color: #f44336; /* Error red */
      color: white;
      padding: 15px;
      border-radius: 4px;
      margin-bottom: 10px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
      animation: fadeIn 0.3s;
    }

    .toast-success {
      background-color: #4CAF50; /* Error red */
      color: white;
      padding: 15px;
      border-radius: 4px;
      margin-bottom: 10px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
      animation: fadeIn 0.3s;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
</style>



<div id="toaster"></div>

<script src="/javascripts/toaster.js"></script>